{
    // my initial settings
    "files.trimTrailingWhitespace": true,
    "editor.tabSize": 2,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "redhat.telemetry.enabled": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "yaml.customTags": [
        "!reference sequence",
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    "yaml.schemas": {
        "file:///Users/thomas.scully/Library/Application%20Support/Code/User/globalStorage/amazonwebservices.aws-toolkit-vscode/sam.schema.json": [
            "test-sam-local/my-test/template.yaml",
            "test-sam-local/gitlab-github-integration/template.yaml"
        ],
        "file:///Users/tscully/.vscode/extensions/atlassian.atlascode-3.0.10/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "json.schemas": [],
    "search.useIgnoreFiles": false,
    "editor.suggest.showMethods": true,
    "editor.suggest.preview": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.snippetSuggestions": "top",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "todo-tree.general.statusBar": "tags",
    "todo-tree.general.enableFileWatcher": true,
    "todo-tree.highlights.useColourScheme": true,
    "npm.keybindingsChangedWarningShown": true,
    "workbench.iconTheme": "vscode-icons",
    "sftp.debug": true,
    "sftp.printDebugLog": true,
    "sftp.downloadWhenOpenInRemoteExplorer": true,
    "window.zoomLevel": 3,
    "jest.virtualFolders": [],
    // Adding settings for vim mode
    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
        "tab.activeBorderTop": "#e7e8df",
        "tab.activeBackground": "#34352f",
        "tab.inactiveBackground": "#272822",
    },
    "workbench.startupEditor": "none",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.tabCompletion": "on",
    "terminal.integrated.copyOnSelection": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.useCtrlKeys": true,
    "vim.leader": "<Space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        // make splits great again
        {
            "before": [
                "<leader>",
                "\\"
            ],
            "commands": [
                "workbench.action.splitEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "-"
            ],
            "commands": [
                "workbench.action.splitEditorDown"
            ]
        },
        // make explorer great again
        {
            "before": [
                "<leader>",
                "g",
                "r"
            ],
            "commands": [
                "workbench.files.action.showActiveFileInExplorer"
            ],
            "when": "viewContainer.workbench.view.explorer.enabled"
        },
        {
            "before": [
                "<leader>",
                "t",
                "r"
            ],
            "commands": [
                "workbench.files.action.focusFilesExplorer"
            ],
        },
        {
            "before": [
                "<leader>",
                "r",
                "r"
            ],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ],
        },
        // Easy way to hide the peksy activitybar... boo activity bar
        {
            "before": [
                "<leader>",
                "a",
                "b"
            ],
            "commands": [
                "workbench.action.toggleActivityBarVisibility"
            ],
        },
        // Toggle zen mode
        {
            "before": [
                "<leader>",
                "z",
                "m"
            ],
            "commands": [
                "workbench.action.toggleZenMode"
            ],
        },
        // Toggle minimap
        {
            "before": [
                "<leader>",
                "m",
                "m"
            ],
            "commands": [
                "editor.action.toggleMinimap"
            ],
        },
        // Toggle breadcrumb
        {
            "before": [
                "<leader>",
                "b",
                "c"
            ],
            "commands": [
                "breadcrumbs.toggle"
            ],
        },
        // Find and Replace
        {
            "before": [
                "<leader>",
                "f",
                "r"
            ],
            "commands": [
                "editor.action.startFindReplaceAction"
            ],
        },
        // Text Search across files in repo
        {
            "before": [
                "<leader>",
                "s",
                "p"
            ],
            "commands": [
                "workbench.view.search"
            ]
        },
        // Find in files
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        // Select Tab by number
        {
            "before": [
                "<leader>",
                "1"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex1"
            ]
        },
        {
            "before": [
                "<leader>",
                "2"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex2"
            ]
        },
        {
            "before": [
                "<leader>",
                "3"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex3"
            ]
        },
        {
            "before": [
                "<leader>",
                "4"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex4"
            ]
        },
        {
            "before": [
                "<leader>",
                "5"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex5"
            ]
        },
        {
            "before": [
                "<leader>",
                "6"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex6"
            ]
        },
        {
            "before": [
                "<leader>",
                "7"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex7"
            ]
        },
        {
            "before": [
                "<leader>",
                "8"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex8"
            ]
        },
        {
            "before": [
                "<leader>",
                "9"
            ],
            "commands": [
                "workbench.action.openEditorAtIndex9"
            ]
        },
        // Markdown Preview
        {
            "before": [
                "<leader>",
                "m",
                "p"
            ],
            "commands": [
                "markdown.showPreviewToSide"
            ]
        },
        // Go to source
        {
            "before": [
                "<leader>",
                "d",
                "f"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        // Follow Link - useful for following a link in a Search File (i.e. the file created after you perform a search then click the 'Open in editor' button)
        {
            "before": [
                "<leader>",
                "f",
                "l"
            ],
            "commands": [
                "editor.action.openLink"
            ]
        },
        // Navigate back
        // VERY weird gotchya with MAC here - you may need to disable a DUMB setting where <space><space> on MAC is mapped to add a period.
        // Go into System Preferences -> Keyboard -> [Click the text tab] -> at the right there are a few checkbox you should uncheck the "Add period with double-space" option
        {
            "before": [
                "<leader>",
                "Space"
            ],
            "commands": [
                "extension.goto-previous-buffer"
            ]
        },
        // Delete White Space Manully
        {
            "before": [
                "<leader>",
                "w",
                "s"
            ],
            "commands": [
                "trailing-spaces.deleteTrailingSpaces"
            ]
        },
        // Keep Preview Tab Oben
        {
            "before": [
                "<leader>",
                "k",
                "o"
            ],
            "commands": [
                "workbench.action.keepEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "v",
                "i"
            ],
            "commands": [
                "editor.action.smartSelect.grow"
            ]
        },
        // Sort imports
        {
            "before": [
                "<leader>",
                "s",
                "i"
            ],
            "commands": [
                "editor.action.organizeImports"
            ]
        },
        // Fold Code
        {
            "before": [
                "<leader>",
                "f",
                "d"
            ],
            "commands": [
                "editor.foldRecursively"
            ]
        },
        {
            "before": [
                "<leader>",
                "u",
                "f"
            ],
            "commands": [
                "editor.unfoldRecursively"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "a"
            ],
            "commands": [
                "editor.foldAll"
            ]
        },
        {
            "before": [
                "<leader>",
                "u",
                "f",
                "a"
            ],
            "commands": [
                "editor.unfoldAll"
            ]
        },
        // Open all open buffers
        {
            "before": [
                "<leader>",
                "b"
            ],
            "commands": [
                {
                    "command": "workbench.action.quickOpen",
                    "args": [
                        "edt "
                    ]
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "t",
                "t"
            ],
            "commands": [
                "editor.action.showHover",
            ]
        },
        // better vertical jumping
        {
            "before": [
                "<C-d>"
            ],
            "after": [
                "<C-d>",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "<C-u>"
            ],
            "after": [
                "<C-u>",
                "z",
                "z"
            ]
        },
        // these next two don't work in vscode but I will still leave them here since I use them in regular vim
        {
            "before": [
                "<PageUp>"
            ],
            "after": [
                "<PageUp>",
                "z",
                "z"
            ]
        },
        {
            "before": [
                "<PageDown>"
            ],
            "after": [
                "<PageDown>",
                "z",
                "z"
            ]
        },
        // Better searching
        {
            "before": [
                "n"
            ],
            "after": [
                "n",
                "z",
                "z",
                "z",
                "v"
            ]
        },
        {
            "before": [
                "N"
            ],
            "after": [
                "N",
                "z",
                "z",
                "z",
                "v"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Find and Replace in selection
        {
            "before": [
                "<leader>",
                "f",
                "r"
            ],
            "commands": [
                {
                    "command": "editor.action.startFindReplaceAction"
                },
                {
                    "command": "toggleFindInSelection"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "g"
            ],
            "commands": [
                "editor.action.smartSelect.grow"
            ]
        },
        {
            "before": [
                "<leader>",
                "s"
            ],
            "commands": [
                "editor.action.smartSelect.shrink"
            ]
        }
    ],
    "editor.lineNumbers": "on",
    "editor.renderWhitespace": "all",
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "explorer.confirmDelete": false,
    "[typescript]": {
        "editor.tabSize": 2
    },
    "trailing-spaces.backgroundColor": "rgba(255,0,0,0.5)",
    "trailing-spaces.borderColor": "rgba(255,255,0,0.5)",
    "trailing-spaces.trimOnSave": true,
    "git.ignoreMissingGitWarning": true,
    "cSpell.userWords": [
        "awsapigateway",
        "awslog",
        "awslogs",
        "boto",
        "cicd",
        "dynatrace",
        "entreleadership",
        "esmodule",
        "everydollar",
        "faas",
        "Fargate",
        "financialwellness",
        "firelens",
        "innersource",
        "jwks",
        "lampogroup",
        "loggly",
        "logglytoken",
        "martech",
        "mulesoft",
        "newrelic",
        "PGPORT",
        "powertools",
        "pulumi",
        "pytest",
        "realestate",
        "Redrive",
        "rscom",
        "scaffolder",
        "smartdollar",
        "teamname",
        "tfstate",
        "unvalidated",
        "websystems"
    ],
    "[python]": {
        "editor.formatOnType": true
    },
    "security.workspace.trust.untrustedFiles": "open",
    "focusActiveEditorGroupterminal.integrated.scrollback": 20000,
    "liveshare.anonymousGuestApproval": "reject",
    "vim.foldfix": true,
    "files.autoSave": "onFocusChange",
    "emmet.showAbbreviationSuggestions": false,
    "vim.smartRelativeLine": true,
    "atlascode.jira.enabled": false,
    "workbench.activityBar.location": "top",
    "editor.accessibilitySupport": "off",
    "editor.minimap.enabled": false,
    "files.associations": {
        "*.inc": "php"
    },
    "gitlens.advanced.blame.customArguments": [
        "--ignore-revs-file",
        ".git-blame-ignore-revs"
    ]
}
